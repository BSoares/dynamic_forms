<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :field_type %>
  <%= f.select :field_type, Field.field_types.keys.map { |field_type| [t("field_types.#{field_type}"), field_type] }, {}, { class: "form-control" } %>
</div>
<div class="form-group">
  <%= f.label :order %>
  <%= f.text_field :order, class: "form-control" %>
</div>
<%= f.submit class: "btn btn-primary" %>
