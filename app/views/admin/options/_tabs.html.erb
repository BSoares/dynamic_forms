<ul class="nav nav-tabs main-nav-tabs">
  <li class="<%= "active" if ["new", "create"].include?(params["action"]) %>">
    <%= link_to new_admin_category_sub_category_form_field_option_url(@category, @sub_category, @form, @field) do %>
      <i class="fa fa-plus"></i>
      <%= t("admin.options.new.title") %>
    <% end %>
  </li>

  <li class="<%= "active" if params["action"] == "index" %>">
    <%= link_to admin_category_sub_category_form_field_options_url(@category, @sub_category, @form, @field) do %>
      <i class="fa fa-list"></i>
      <%= t("admin.options.index.title") %>
    <% end %>
  </li>

  <% if @option.present? and @option.persisted? %>

    <li class="<%= "active" if ["edit", "update"].include?(params["action"]) %>">
      <%= link_to edit_admin_category_sub_category_form_field_option_url(@category, @sub_category, @form, @field, @option) do %>
        <i class="fa fa-pencil"></i>
        <%= t("admin.options.edit.title") %>
      <% end %>
    </li>

  <% end %>
</ul>
